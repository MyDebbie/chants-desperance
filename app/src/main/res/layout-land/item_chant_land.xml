<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ChantContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/ivImageChant"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/book_open_blank_variant"
        android:layout_gravity="center_vertical"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/ivImageChant"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tvNumeroChant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 - "
            android:textColor="@android:color/black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvTitreChant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amazing Grace"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:maxLines="2"
            android:ellipsize="end"/>

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/ivImageChant"
        android:background="@android:color/darker_gray"/>

</RelativeLayout>
