<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ChantContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginStart="5dp">

    <ImageView
        android:id="@+id/ivImageChant"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/book_open_blank_variant"/>


    <TextView
        android:id="@+id/tvNumeroChant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/ivImageChant"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/black"
        app:fontFamily="sans-serif-medium"
        tools:text="000" />

    <TextView
        android:id="@+id/tvTitreChant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/tvNumeroChant"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/black"
        app:fontFamily="sans-serif-medium"
        tools:text="Crions à Dieu" />

    <TextView
        android:id="@+id/tvSectionChant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/tvTitreChant"
        android:layout_toEndOf="@+id/ivImageChant"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/gold"
        app:fontFamily="sans-serif-medium"
        tools:text="Chants D'Espérance Français" />


    <View
        android:id="@+id/ic_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/tvSectionChant"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="#000000" />

</RelativeLayout>